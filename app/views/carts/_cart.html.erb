<div class="cart_title">Your Cart</div>

<table>
  <%= render(cart.line_items) %>

    <tr class="total_line">
      <td colspan="3">Total</td>
      <td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
    </tr>

</table>

<%= button_to 'Continue Shopping', store_path, method: 'get',
    :form => { :id => 'continue_shopping' } %>
    
<%= hidden_tag_if(controller.controller_name == "orders", :div, id: 'checkout_button') do %>
  <%= button_to 'Checkout', new_order_path, method: 'get' %>
<% end %>

<%= button_to 'Empty Cart', cart, method: 'delete',
    remote: true, :form => { :id => 'empty_cart' }, data: { confirm: 'Are you sure?' } %>





