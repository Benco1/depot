<!DOCTYPE html>
<html>
  <head>
    <title>Depot</title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body class="<%= controller.controller_name %>">
    <div id="banner">
      <%= link_to image_tag("logo.png"), store_path %>
      <%= @page_title || "Pragmatic Bookshelf" %>
    </div>
    <div>
      <div id="columns">
        <div id="side">
          <% if @cart %> <!-- when cart is nil, products#index will throw error -->
            <%= hidden_tag_if(@cart.line_items.empty?, :div, id: 'cart') do %>
              <%= render @cart %>
            <% end %>
          <% end %>
          <ul class="main_links">
            <li><%= link_to 'Home', store_path %></li>
            <li><a href="http://pragprog.com">Questions</a></li>
            <li><a href="http://pragprog.com">News</a></li>
            <li><a href="http://pragprog.com">Contact</a></li>
          </ul>
          <p class="date_and_time"><%= current_date_and_time %></p>
        </div>
        <div id="main">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
